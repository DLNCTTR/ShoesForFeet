@model ShoesForFeet.Models.User

<h1 class="mb-4">Create a New User</h1>

<form method="post" asp-action="Add">
    <!-- User Name Field -->
    <div class="form-group mb-3">
        <label for="Name">User Name:</label>
        <input id="Name" name="Name" value="@Model?.Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span> <!-- Validation for Name -->
    </div>

    <!-- Password Field -->
    <div class="form-group mb-3">
        <label for="Password">Password:</label>
        <input id="Password" name="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span> <!-- Validation for Password -->
    </div>

    <!-- Buttons Section -->
    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Add User</button> <!-- Add User Button -->
        <a href="/User/List" class="btn btn-secondary">User List</a> <!-- User List Button -->
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!-- Client-side validation scripts -->
}