@model ShoesForFeet.Models.Product

<h1 class="mb-4">Product Details</h1>

<div class="card mb-4">
    <div class="card-header">
        <h2>@Model.Name</h2>
    </div>
    <div class="card-body">
        <p><strong>Shoe Size:</strong> @Model.ShoeSize</p>
        <p><strong>Price:</strong> $@Model.Price</p>
        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid mb-3" />
        <p><strong>Description:</strong> @Model.Description</p>
    </div>
</div>

<a asp-action="List" class="btn btn-secondary">Back to all Products</a>