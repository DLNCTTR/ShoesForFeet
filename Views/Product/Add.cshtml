@model ShoesForFeet.Models.Product

<h1 class="mb-4">Add a New Product</h1>

<form method="post" asp-action="Add" enctype="multipart/form-data">
    <!-- Product Name Field -->
    <div class="form-group mb-3">
        <label for="Name">Product Name:</label>
        <input id="Name" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span> <!-- Validation for Name -->
    </div>

    <!-- Shoe Size Field -->
    <div class="form-group mb-3">
        <label for="ShoeSize">Shoe Size:</label>
        <input id="ShoeSize" asp-for="ShoeSize" type="number" class="form-control" />
        <span asp-validation-for="ShoeSize" class="text-danger"></span> <!-- Validation for Shoe Size -->
    </div>

    <!-- Price Field -->
    <div class="form-group mb-3">
        <label for="Price">Price:</label>
        <input id="Price" asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span> <!-- Validation for Price -->
    </div>

    <!-- Image Upload Field -->
    <div class="form-group mb-3">
        <label for="ImageUrl">Product Image URL:</label>
        <input id="ImageUrl" asp-for="ImageUrl" type="text" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span> <!-- Validation for Image Upload -->
    </div>

    <!-- Description Field -->
    <div class="form-group mb-3">
        <label for="Description">Description:</label>
        <textarea id="Description" asp-for="Description" rows="4" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span> <!-- Validation for Description -->
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>

@section Scripts {
    <!-- Client-side validation scripts -->
    <partial name="_ValidationScriptsPartial" />
}