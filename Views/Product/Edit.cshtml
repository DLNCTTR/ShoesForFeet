@model ShoesForFeet.Models.Product

<h2>Edit Product</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label>Shoe Size:</label>
        <input asp-for="ShoeSize" type="number" />
        <span asp-validation-for="ShoeSize"></span>
    </div>
    <div>
        <label>Price:</label>
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <label>Image URL:</label>
        <input asp-for="ImageUrl" />
        <span asp-validation-for="ImageUrl"></span>
    </div>
    <div>
        <label>Description:</label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <button type="submit">Save Changes</button>
</form>