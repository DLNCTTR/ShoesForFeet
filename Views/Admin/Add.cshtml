@model ShoesForFeet.Models.Product

<h2>Add Product</h2>
<form asp-action="Add" method="post">
    <div class="form-group mb-3">
        <label for="Name">Product Name:</label>
        <input id="Name" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Price">Price:</label>
        <input id="Price" asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Description">Description:</label>
        <textarea id="Description" asp-for="Description" rows="4" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Product</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}