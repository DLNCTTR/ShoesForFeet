<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shoes for Feet</title>

    <!-- Include Bootstrap for responsive design -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Custom CSS for additional styling -->
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* Ensures footer stays at the bottom */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }
    </style>
</head>
<body>
<!-- Header Section -->
<header class="bg-primary text-white p-3">
    <div class="container d-flex justify-content-between align-items-center">
        <h1 class="h4 mb-0">Shoes For Feet</h1>
        <!-- Navigation Links -->
        <nav>
            <a href="/" class="text-white mx-2">Home</a>
            <a href="/Product/List" class="text-white mx-2">Products</a>
            @if (User.Identity.IsAuthenticated)
            {
            <a href="/Home/Contact" class="text-white mx-2">Contact Us</a>
            @if (User.IsInRole("Admin"))
            {
            <a href="/Admin/Dashboard" class="text-white mx-2">Admin</a>
            }
            <a href="/User/Logout"
               class="text-white mx-2"
               onclick="return confirm('Are you sure you want to sign out? All progress will be lost.')">
                Logout (@User.Identity.Name)
            </a>
            }
            else
            {
            <a href="/User/Login" class="text-white mx-2">Login/Register</a>
            }
        </nav>
    </div>
</header>

<!-- Success Message Section -->
@if (TempData["Message"] != null)
{
<div class="alert alert-success text-center">
    @TempData["Message"]
</div>
}

<!-- Main Content Section -->
<main class="container mt-4">
    @RenderBody()
</main>

<!-- Footer Section -->
<footer class="bg-dark text-white p-3 text-center">
    <p>&copy; 2024 ShoesForFeet.</p>
</footer>

<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<!-- Include validation scripts -->
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

<!-- Include Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Optional Scripts Section for additional JavaScript -->
@RenderSection("Scripts", required: false)
</body>
</html>
