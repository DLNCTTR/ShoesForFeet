<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shoes for Feet</title>

    <!-- Include Bootstrap for responsive design -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Custom CSS for additional styling -->
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* Ensures footer stays at the bottom */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Makes the body fill the viewport height */
        }

        main {
            flex: 1; /* Allows the main content to expand and push the footer down */
        }
    </style>
</head>
<body>
<!-- Header Section -->
<header class="bg-primary text-white p-3">
    <div class="container d-flex justify-content-between align-items-center">
        <h1 class="h4 mb-0">Shoes For Feet</h1>
        <!-- Navigation Links -->
        <nav>
            <a href="/" class="text-white mx-2">Home</a>
            <a href="/Product/List" class="text-white mx-2">Products</a>
            @if (User.Identity.IsAuthenticated)
            {
            <a href="/User/Logout" class="text-white mx-2">Logout (@User.Identity.Name)</a>
            }
            else
            {
            <a href="/User/Login" class="text-white mx-2">Login</a>
            }
            }
        </nav>
    </div>
</header>

<!-- Main Content Section -->
<main class="container mt-4">
    @RenderBody() <!-- Renders the content of the current view -->
</main>

<!-- Footer Section -->
<footer class="bg-dark text-white p-3 text-center">
    <p>&copy; 2024 ShoesForFeet.</p>
</footer>

<!-- Optional Scripts Section for additional JavaScript -->
@RenderSection("Scripts", required: false)

<!-- jQuery and Bootstrap JavaScript -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
